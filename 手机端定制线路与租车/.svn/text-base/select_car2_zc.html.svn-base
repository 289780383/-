<script type="text/javascript">
    font_size();
    window.onresize = function () {
        font_size();
    };
    function font_size() {
        var deviceWidth = document.documentElement.clientWidth;
        if (deviceWidth > 750) deviceWidth = 750;//640为设计稿宽度三处需要修改
        document.documentElement.style.fontSize = deviceWidth / 7.5 + 'px';
    }
    $(function(){
        /**切换种类*/
        $(".sel_type li").on("click",sel_car_type);
        /**选择具体类别*/
        $(".filter_list li").on("click",filter_car_type);
    });
    /**切换种类*/
    function sel_car_type(){
        $(".sel_type li").removeClass("sel_li");
        $(this).addClass("sel_li");
    }
    /**选择具体类别*/
    function filter_car_type(){
        $(this).siblings().removeClass("filter_li");
        $(this).siblings().find("i").remove();
        $(this).append("<i></i>");
$(this).addClass("filter_li");
    }
</script>
</html>